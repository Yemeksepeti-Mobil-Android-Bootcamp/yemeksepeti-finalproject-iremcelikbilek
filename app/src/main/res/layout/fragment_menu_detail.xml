<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/menu_detail_img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/menu_detail_img"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:orientation="vertical"
        android:background="@drawable/menu_detail_background">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/menu_detail_name_txt"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The BTS Meal"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/menu_detail_restaurant_name"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="from McDonald's"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"/>

        <TextView
            android:paddingHorizontal="10dp"
            android:id="@+id/menu_detail_description_txt"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description is here"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_regular"/>

        <androidx.cardview.widget.CardView
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:orientation="horizontal">
           <RelativeLayout
               android:padding="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_alignParentStart="true"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/remove_btn"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_baseline_remove_24"/>

                   <TextView
                       android:id="@+id/menu_count_number_txt"
                       android:layout_gravity="center"
                       android:layout_marginHorizontal="5dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="1 adet"/>

                   <ImageView
                       android:id="@+id/add_btn"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_baseline_add_24"/>

               </LinearLayout>

               <TextView
                   android:id="@+id/menu_price_txt"
                   android:layout_marginHorizontal="10dp"
                   android:layout_alignParentEnd="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="26,90 TL"
                   android:textColor="@color/accentColor"
                   android:fontFamily="@font/montserrat_medium"/>

           </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_cart_btn"
            android:layout_marginHorizontal="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login_background"
            android:text="Add to Cart"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

    </LinearLayout>

</FrameLayout>